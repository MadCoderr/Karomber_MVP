<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_bg3"
    tools:context=".create_account.sign_up.SignUp3Fragment">


    <TextView
        android:id="@+id/tv_head_signUp2"
        style="@style/head_Text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="@string/su_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message"
        style="@style/msgs_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="40dp"
        android:text="@string/su3_msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_head_signUp2" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="331dp"
        android:layout_height="114dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message">

        <ProgressBar
            android:id="@+id/pro_bar_sign_up_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password_signup3"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_continue_singup3"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignEnd="@id/et_password_signup3"
            android:layout_alignRight="@id/et_password_signup3"
            android:layout_alignBaseline="@id/et_password_signup3"
            android:background="@drawable/righ_arrow_btn" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_password_signup3"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName"
            app:backgroundTint="@color/white"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="238dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>