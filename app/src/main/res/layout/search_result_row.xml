<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_list"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/error_holder_image"
        app:layout_constraintBottom_toBottomOf="@+id/img_trans_item_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_trans_item_list"
        android:layout_width="315dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/tag_bg"
        app:layout_constraintBottom_toBottomOf="@id/img_item_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lbl_name_item_list"
        style="@style/attractoin_name_style"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="Pine Top Hotel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805" />

    <TextView
        android:id="@+id/lbl_search_name_item_list"
        style="@style/attractoin_tag_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="Naran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_name_item_list"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lbl_distance_item_list"
        style="@style/attractoin_distance_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        tools:text="682 Km"
        app:layout_constraintEnd_toEndOf="@+id/img_trans_item_list"
        app:layout_constraintTop_toTopOf="@+id/img_trans_item_list" />

    <TextView
        android:id="@+id/lbl_max_time_item_list"
        style="@style/attractoin_timeToReach_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="9 hours and 32 min ETA"
        app:layout_constraintBottom_toBottomOf="@+id/img_trans_item_list"
        app:layout_constraintEnd_toEndOf="@+id/img_trans_item_list"
        app:layout_constraintTop_toBottomOf="@+id/lbl_distance_item_list"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>